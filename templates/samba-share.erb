# share <%= @name %> managed by puppet
[<%= @name %>]
<% if @comment -%>
  comment = <%= @comment %>
<% end-%>
  path = <%= @path %>
  read only = <%= @read_only %>
  create mask = <%= @create_mask %>
  directory mask = <%= @directory_mask %>
  browsable = <%= @browsable %>
<% if @smb_options and not @smb_options.empty? -%>
  <% if @smb_options.is_a?(Array) -%>
<%= @smb_options.join("\n  ") %>
  <% else -%>
<%= @smb_options %>
  <% end -%>
<% end -%>

