# Global parameters
[global]
    workgroup = <%= samba_domain_name %>
<% unless samba_netbios_name.to_s.empty? then  -%>
    netbios name = <%= samba_netbios_name %>
<% end -%>

;    os level = 68
;    security = user
;    wins support = Yes
;    enable privileges = Yes
    server string = Samba Server %v
    encrypt passwords = true
    passdb backend = tdbsam
    obey pam restrictions = yes



    unix password sync = Yes

  passwd program = /usr/bin/passwd %u
  passwd chat = *Enter\snew\s*\spassword:* %n\n *Retype\snew\s*\spassword:* %n\
n *password\supdated\ssuccessfully* .
 pam password change = yes



;	log level = 2
	max log size = 50
	debug timestamp = yes


    log file = /var/log/samba/log.%m
;    max log size = 100000
<% if ! samba_listen_interface.to_s.empty? -%>
  interfaces =  <%= samba_listen_interface %>
<% else -%>
  interfaces = 0.0.0.0
<% end -%>
    bind interfaces only = yes

;    time server = Yes
    socket options = TCP_NODELAY SO_RCVBUF=8192 SO_SNDBUF=8192
;    mangling method = hash2
;    Dos charset = utf-8
;    Unix charset = utf-8
;    name resolve order = wins host lmhosts bcast
	
;    domain logons = Yes
;    preferred master = True
;    domain master = True
    dns proxy = No
	
;    # no profiles
;    logon path = 
;    logon home =
load printers = no



 ;   nt acl support = No
 ;   deadtime = 10
 ;   guest account = nobody
    map to guest = Bad User
    dont descend = /proc,/dev,/etc,/lib,/lost+found,/initrd

    # to maintain capital letters in shortcuts in any of the profile folders:
 ;   preserve case = yes
 ;   short preserve case = yes
 ;   case sensitive = no

<% if samba_homes == "true" %>
[homes]
    comment = repertoire de %U, %u
    path = /home/%U
    read only = No
    oplocks = no
    create mask = 0644
    directory mask = 0755
    browseable = No
<% end %>


[data]
        comment = data
        path = /srv/storage
        valid users = tomcat,wmserver,arbor
        write list = menos
	force group = menos
        read only = no
        create mask = 0766

